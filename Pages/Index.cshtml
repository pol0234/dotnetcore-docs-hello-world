@page
@model IndexModel
@{    
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Hello Beautiful World from .NETspend 8</h1>
    <p class="lead">Welcome to your first ASP.NET Core app 🎉</p>
    <p>
        Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.
    </p>

    <hr />

    <div class="mb-4">
        <strong>Host operating system:</strong> @Model.OSVersion
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm p-3 mb-4">
                <h4>🚀 Quick Start</h4>
                <p>Explore your project structure and start coding right away.</p>
                <a class="btn btn-primary" href="/docs">Go to Docs</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm p-3 mb-4">
                <h4>📢 News</h4>
                <ul class="list-unstyled">
                    <li>✔ .NET 8 is here</li>
                    <li>✔ Hot reload supported</li>
                    <li>✔ Cross-platform builds</li>
                </ul>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm p-3 mb-4">
                <h4>📞 Support</h4>
                <p>Need help? Check our community and support channels.</p>
                <a class="btn btn-outline-secondary" href="https://github.com/dotnet">GitHub</a>
            </div>
        </div>
    </div>
</div>
